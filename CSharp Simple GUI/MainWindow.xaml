<Window x:Class="CSharp_Simple_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        xmlns:local="clr-namespace:CSharp_Simple_GUI"
        mc:Ignorable="d"
        Title="C# GUI" Height="600" Width="800">
    <Grid>
        <DockPanel
            Margin="10"
            x:Name="topStackPanel">
            <StackPanel x:Name="infoStackPanel" Width="257">
                <Label x:Name="headingLabel" Margin="0,0,0,10">Device Data View</Label>
                <StackPanel x:Name="deviceSelectorStackPanel" Orientation="Horizontal">
                    <Label>Select Your Device:</Label>
                </StackPanel>
                <Label x:Name="deviceName" Content="Device"></Label>
            </StackPanel>
            
            <ScottPlot:WpfPlot x:Name="WpfPlot1" Margin="0,88,0,0" />
        </DockPanel>
    </Grid>
</Window>
